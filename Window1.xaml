<Window x:Class="Ekz_codeFirst.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="50">
            <DataGrid x:Name="existingEntryGrid" Grid.Row="0" Grid.ColumnSpan="2" Height="150" Width="1000">
            </DataGrid>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Height="50">
                <TextBox x:Name="Surname" Width="100"></TextBox>
                <TextBox x:Name="Item" Width="100"></TextBox>
                <TextBox x:Name="StartYear" Width="100"></TextBox>
                <TextBox x:Name="EndYear" Width="100"></TextBox>
                <Button Content="Add entry"  Width="100" Click="Button_Click_Add2"></Button>
                <Button Content="Delete entry" Width="100" Click="Button_Click_Delete2"></Button>
            </StackPanel>

        </StackPanel>





        </Grid>
</Window>
